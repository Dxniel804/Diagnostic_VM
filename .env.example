# ============================================
# CONFIGURAÇÃO DO SISTEMA DE ANÁLISE DE VENDAS
# ============================================

# API GROQ (RECOMENDADA - GRATUITA)
# Obtenha sua chave em: https://console.groq.com/
# A Groq oferece tier gratuito generoso e é muito rápida
GROQ_API_KEY=sua_chave_groq_aqui
GROQ_MODEL=llama-3.3-70b-versatile

# Configurações de Retry (para evitar rate limits)
MAX_RETRIES=3
RETRY_DELAY=5
REQUEST_DELAY=2

# Flask
FLASK_DEBUG=True
PORT=5000
SECRET_KEY=gerar_chave_secreta_aqui
